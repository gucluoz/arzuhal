<div class="subjectlist">
  <h3>Konular</h3>
  <ul class="list-unstyled">
    {% for s in subjects %}
    <li><a href="{% url 'indexsearch' s.name %}">{{ s.name }} ({{s.count}})</a></li>
    {% empty %}
    <li>Bo≈ü.</li>
    {% endfor %}
  </ul>
</div>


{% if latestComments %}
  <div class="footer-latest">
    <h3>Son Yorumlar</h3>
    <ul class="list-unstyled distinct">
      {% for c in latestComments|dictsortreversed:"timestamp" %}
        <p>
          <i>{{ c.timestamp }} <strong>{{ c.name }}</strong>:</i><br/>{{ c.comment }}
        </p>
      {% endfor %}
    </ul>
  </div>
{% endif %}